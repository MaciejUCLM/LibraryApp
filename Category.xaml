<UserControl
    x:Class="LibraryApp.Category"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LibraryApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    ScrollViewer.HorizontalScrollBarVisibility="Auto"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <ScrollViewer>
    <StackPanel
        x:Name="CategoryPanel"
        Width="357"
        Height="199"
        Margin="23,37,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
        <TextBlock
            x:Name="CategoryTextBlock"
            Height="19"
            FocusVisualPrimaryBrush="Transparent"
            Foreground="White"
            Text="TextBlock"
            TextWrapping="Wrap" />
        <Border
            Height="3"
            Margin="0,0,0,-3"
            VerticalAlignment="Top"
            Background="#FFD1D1D1"
            BorderBrush="#FFD1D1D1"
            BorderThickness="1"
            FocusVisualPrimaryBrush="{x:Null}"
            FocusVisualSecondaryBrush="{x:Null}" />
        <VariableSizedWrapGrid x:Name="PaneHolder" Orientation="Horizontal" />
    </StackPanel>
</ScrollViewer>

</UserControl>

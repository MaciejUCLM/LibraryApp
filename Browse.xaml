<Page
    x:Class="LibraryApp.Browse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LibraryApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="Black">
        <Button
            Width="240"
            Height="300"
            Margin="20,20,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00000000" BorderBrush="#FFECECEC" Click="Button_Click">
            <StackPanel
                Width="240"
                Height="300"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" BorderBrush="White">
                <Image
                    Width="200"
                    Height="120"
                    Margin="20,20,20,0"
                    HorizontalAlignment="Center" />
                <TextBlock
                    Width="200"
                    Height="120"
                    SelectionChanged="TextBlock_SelectionChanged"
                    Text=""
                    TextWrapping="Wrap" Margin="0,20,0,0" />
            </StackPanel>
        </Button>

    </Grid>
</Page>

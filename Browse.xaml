<Page
    x:Class="LibraryApp.Browse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LibraryApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="Black" FocusVisualPrimaryBrush="White">
        <Button
            Width="160"
            Height="224"
            Margin="22,22,0,0"
            Padding="0,0,0,0"
            VerticalAlignment="Top"
            Background="#05000000"
            BorderBrush="#FCD4D4D4"
            BorderThickness="2,2,2,2"
            FocusVisualPrimaryBrush="#FF616161"
            FocusVisualSecondaryBrush="#FF6E6E6E"
            Foreground="#FF707070">
            <StackPanel Width="155.8" BorderBrush="White">
                <Image
                    Height="80"
                    Margin="20,15,20,0"
                    HorizontalAlignment="Stretch" />
                <TextBlock
                    Height="80"
                    Margin="20,20,20,20"
                    Text=""
                    TextWrapping="Wrap" />
            </StackPanel>
        </Button>

    </Grid>
</Page>
